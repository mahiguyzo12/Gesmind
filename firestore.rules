    match /stores_registry/{storeId} {
      allow read: if true;
      allow write: if isAuth();
    }

    // ðŸ”¹ BOUTIQUES
    match /stores/{storeId} {
      // RÃ¨gle assouplie : Tout utilisateur connectÃ© peut lire/Ã©crire
